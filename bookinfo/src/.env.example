# ---------- MySQL ----------
MYSQL_ROOT_PASSWORD=yourStrongPwd   # bắt buộc: mật khẩu root
MYSQL_DATABASE=reviews              # tên DB mặc định khi khởi tạo
# MYSQL_USER=appuser                # (tùy chọn) nếu muốn tạo thêm user riêng
# MYSQL_PASSWORD=appuserPwd         # (tùy chọn) mật khẩu cho user ở trên
# MYSQL_PORT=3306                   # (tùy chọn) đổi port nếu cần

# ---------- Details service ----------
DETAILS_VERSION=v1                  # có thể v1, v2...
ENABLE_EXTERNAL_BOOK_SERVICE=false  # true/false để bật dịch vụ ngoài

# ---------- Ratings service ----------
RATINGS_VERSION=v1                  # có thể chạy nhiều version song song
# MONGO_HOST=mongodb                # (tùy chọn) hostname MongoDB, mặc định là mongodb
# MONGO_PORT=27017                  # (tùy chọn) cổng MongoDB
# RATINGS_LOG_LEVEL=debug           # (tùy chọn) level log: info/debug/warn

# ---------- Reviews service ----------
REVIEWS_VERSION=v1                  # version service reviews
ENABLE_RATINGS=true                 # true: bật ratings, false: tắt
STAR_COLOR=black                    # màu hiển thị sao: black, red, blue...
# MYSQL_HOST=mysql                  # (tùy chọn) hostname MySQL
# MYSQL_PORT=3306                   # (tùy chọn) cổng MySQL
# MYSQL_USER=root                   # (tùy chọn) user kết nối MySQL
# MYSQL_PASSWORD=yourStrongPwd      # (tùy chọn) mật khẩu user

# ---------- Productpage service ----------
FLOOD_FACTOR=0                      # giả lập load, số càng cao càng nặng
DETAILS_HOST=details              # (tùy chọn) override hostname service details
RATINGS_HOST=ratings              # (tùy chọn) override hostname service ratings
REVIEWS_HOST=reviews              # (tùy chọn) override hostname service reviews
# PRODUCTPAGE_LOG_LEVEL=info        # (tùy chọn) level log: info/debug/warn

# ---------- Common ----------
# NETWORK_NAME=app-net              # (tùy chọn) tên network docker
# SERVICE_VERSION_TAG=latest        # (tùy chọn) tag build image
